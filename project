#!/bin/bash

COUNT=0

version() {
    case $1 in
        nodesource )
            echo `node -e 'console.log(require("./package.json").engines.nodesource)'`
            ;;

        * )
            echo `node -e 'console.log(require("./package.json").version)'`
            ;;
    esac
}

debug() {
    make -s clean
    make -s build

    sudo ./debug $@
}

publish() {
    current=$(version)

    case $1 in
        stable | edge | bleeding )
            reprepro -b ../repo/debian includedeb $1 builds/helm-$current-hoobs-amd64.deb
            reprepro -b ../repo/debian includedeb $1 builds/helm-$current-hoobs-arm64.deb
            reprepro -b ../repo/debian includedeb $1 builds/helm-$current-hoobs-armhf.deb
            ;;

        list )
            list $2
            ;;
    esac
}

list() {
    case $1 in
        stable )
            reprepro -b ../repo/debian list stable helm
            ;;

        edge )
            reprepro -b ../repo/debian list edge helm
            ;;

        bleeding )
            reprepro -b ../repo/debian list bleeding helm
            ;;

        * )
            reprepro -b ../repo/debian list stable helm
            reprepro -b ../repo/debian list edge helm
            reprepro -b ../repo/debian list bleeding helm
            ;;
    esac
}

image() {
    if [[ $COUNT -gt 0 ]] ; then
        echo "" >> build.log
    fi

    echo "$1 - $(date)" >> build.log
    echo "------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------" >> build.log

    make helm-$1

    echo "------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------" >> build.log

    COUNT=$((COUNT+1))
}

build() {
    touch build.log
    truncate -s 0 build.log

    image arm64
    image armhf
    image amd64
}

case $1 in
    version )
        shift

        version $@
        ;;

    lint )
        make lint
        ;;

    debug )
        shift

        debug $@
        ;;

    build )
        build
        ;;

    publish )
        shift

        publish $@
        ;;

    clean )
        make clean
        ;;
esac
